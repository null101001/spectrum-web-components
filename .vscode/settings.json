{
  "[css]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "always"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120
  },
  "[mdx]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120
  },
  "[postcss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "always"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ────────────────────────────────────────────────────────────
  // PROJECT FORMATTERS & CODE ACTIONS
  // ────────────────────────────────────────────────────────────
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ────────────────────────────────────────────────────────────
  // PROJECT DICTIONARY
  // ────────────────────────────────────────────────────────────
  "cSpell.words": [
    "activedescendant",
    "AUTODOCS",
    "checkmark",
    "coachmark",
    "describedby",
    "disableable",
    "effectful",
    "focusable",
    "haspopup",
    "highcontrast",
    "labelledby",
    "longpress",
    "minifiers",
    "nowrap",
    "rgba",
    "seafoam",
    "sidenav",
    "tabindex",
    "valuenow",
    "valuetext"
  ],
  "css.validate": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "eslint.validate": ["javascript", "typescript", "json", "jsonc"],

  // ────────────────────────────────────────────────────────────
  // FILE EXCLUSIONS (Generated files)
  // ────────────────────────────────────────────────────────────
  "files.exclude": {
    "**/*.css.ts": {
      "when": "$(basename)"
    },
    "**/*.test-vrt.ts": true,
    "1st-gen/packages/**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "1st-gen/packages/**/*.dev.js": {
      "when": "$(basename).js"
    },
    "1st-gen/packages/**/*.js": {
      "when": "$(basename).ts"
    },
    "1st-gen/packages/**/*.js.map": true,
    "1st-gen/tools/**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "1st-gen/tools/**/*.dev.js": {
      "when": "$(basename).js"
    },
    "1st-gen/tools/**/*.js": {
      "when": "$(basename).ts"
    },
    "1st-gen/tools/**/*.js.map": true,
    "packages/**": true,
    "projects/**": true,
    "test/**": true,
    "tools/**": true
  },
  "lit-plugin.strict": true,
  "postcss.validate": false,
  "prettier.requireConfig": true,
  "stylelint.enable": true,
  "stylelint.packageManager": "yarn",
  "stylelint.validate": ["css", "postcss"],

  // ────────────────────────────────────────────────────────────
  // PROJECT-SPECIFIC TOOLING
  // ────────────────────────────────────────────────────────────
  "typescript.tsdk": "node_modules/typescript/lib"
}
